<div class="ui fluid raised card chatbox">
  <div class="ui content" id="chat">
    <div class="ui feed" id="chat-container">
      <%= render @messages %>
    </div>
  </div>

  <div class="extra content">
    <%= form_for(@message, html: {class: 'ui reply form', role: 'form'}, url: message_path, remote: true) do |f| %>
      <div class="field">
        <div class="ui fluid icon input">
          <%= f.text_field :body, placeholder: 'Type something...' %>
          <%= f.button '<i class="bordered inverted violet edit icon"></i>'.html_safe %>
        </div>
      </div>
    <% end %>
  </div>
</div>
